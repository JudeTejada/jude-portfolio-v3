---
interface Props {
  href: string;
  extraClasses?: string;
}

const { href, extraClasses = '' } = Astro.props;
---

<a href={href} class={`inline-flex items-center justify-center px-6 py-3 bg-black text-white rounded-full font-medium transition-colors duration-200 ease-in-out hover:bg-gray-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 ${extraClasses}`}>
  <slot />
</a>