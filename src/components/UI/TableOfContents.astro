---
interface Props {
  headings: Array<{
    text: string;
    slug: string;
    level: number;
  }>;
}

const { headings } = Astro.props;

// Filter headings to only include h2 and h3
const filteredHeadings = headings.filter(h => h.level >= 2 && h.level <= 3);
---

{filteredHeadings.length > 0 && (
  <nav>
    <ul class="flex flex-col gap-2 border-l border-gray-100 pl-4">
      {filteredHeadings.map((heading) => (
        <li class={`${heading.level === 3 ? 'ml-4' : ''}`}>
          <a
            href={`#${heading.slug}`}
            class="text-sm text-gray-500 hover:text-black transition-colors block py-1"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}