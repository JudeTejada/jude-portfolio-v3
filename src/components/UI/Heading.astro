---
interface Props {
  as: 'h1' | 'h2' | 'h3' | 'h4' | 'h6';
  extraClasses?: string;
}

const { as, extraClasses = '' } = Astro.props;

function getHeadingClasses(type: string, extraClasses: string): string {
  const baseClasses = extraClasses;

  switch (type) {
    case 'h1':
      return `font-semibold text-5xl md:text-7xl tracking-tight text-gray-900 ${baseClasses}`;
    case 'h2':
      return `text-2xl md:text-3xl font-semibold text-gray-900 ${baseClasses}`;
    case 'h3':
      return `text-lg font-medium text-gray-900 ${baseClasses}`;
    case 'h4':
      return `text-base font-medium text-gray-900 ${baseClasses}`;
    case 'h6':
      return `text-xs font-medium uppercase tracking-wide text-gray-500 ${baseClasses}`;
    default:
      return baseClasses;
  }
}
---

{as === 'h1' && (
  <h1 class={getHeadingClasses(as, extraClasses)}>
    <slot />
  </h1>
)}
{as === 'h2' && (
  <h2 class={getHeadingClasses(as, extraClasses)}>
    <slot />
  </h2>
)}
{as === 'h3' && (
  <h3 class={getHeadingClasses(as, extraClasses)}>
    <slot />
  </h3>
)}
{as === 'h4' && (
  <h4 class={getHeadingClasses(as, extraClasses)}>
    <slot />
  </h4>
)}
{as === 'h6' && (
  <h6 class={getHeadingClasses(as, extraClasses)}>
    <slot />
  </h6>
)}