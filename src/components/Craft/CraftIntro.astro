---
interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Crafts", 
  subtitle = "A collection of experimental UI components, animations, and digital artifacts." 
} = Astro.props;
---

<section class="relative pt-32 pb-16 px-6 md:px-12 max-w-7xl mx-auto z-10">
  <div class="space-y-6">
    <div class="inline-block bg-gray-100 text-gray-500 text-xs px-3 py-1 rounded-full font-medium uppercase tracking-wide">
      Experimental
    </div>
    <h1 class="text-5xl md:text-7xl font-medium tracking-tight text-gray-900 leading-[1.1]">
      {title}
    </h1>
    <p class="text-xl text-gray-600 max-w-2xl leading-relaxed">
      {subtitle}
    </p>
  </div>
</section>
