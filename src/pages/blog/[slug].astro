---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/Layout/Container.astro';
import TableOfContents from '../../components/UI/TableOfContents.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';

// MDX component imports
import VideoPlayer from '../../components/MDX/VideoPlayer.astro';
import ImageWithCaption from '../../components/MDX/ImageWithCaption.astro';
import CustomImage from '../../components/MDX/CustomImage.astro';
import List from '../../components/MDX/List.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => {
    return data.isPublished !== false;
  });

  return blogPosts.map(post => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;
const { Content, headings } = await post.render();

// Format date
const date = new Date(post.data.publishedAt);
const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Extract headings for table of contents
const tocHeadings = headings.map(heading => ({
  text: heading.text,
  slug: heading.slug,
  level: heading.depth
}));

// Structured data for SEO
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: post.data.title,
  description: post.data.summary,
  image: post.data.image || 'https://judetejada.dev/banner.png',
  datePublished: post.data.publishedAt,
  dateModified: post.data.publishedAt,
  author: {
    '@type': 'Person',
    name: 'Jude Tejada',
    url: 'https://judetejada.dev'
  },
  publisher: {
    '@type': 'Person',
    name: 'Jude Tejada',
    url: 'https://judetejada.dev'
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': `https://judetejada.dev/blog/${post.slug}`
  },
  url: `https://judetejada.dev/blog/${post.slug}`,
  keywords: post.data.labels
    ? post.data.labels.join(', ')
    : 'web development, programming, technology'
};

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://judetejada.dev'
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Blog',
      item: 'https://judetejada.dev/blog'
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: post.data.title,
      item: `https://judetejada.dev/blog/${post.slug}`
    }
  ]
};
---

<Layout
  title={post.data.title}
  description={post.data.summary}
  canonical={`https://judetejada.dev/blog/${post.slug}`}
>
  <script type='application/ld+json' set:html={JSON.stringify(structuredData)}></script>
  <script type='application/ld+json' set:html={JSON.stringify(breadcrumbSchema)}></script>

  <section class="pt-32 pb-20 bg-white min-h-screen">
    <Container>
      <div class="mb-8">
        <a href="/blog" class="text-sm font-medium text-gray-500 hover:text-black transition-colors mb-8 inline-block">
          &larr; Back to Writing
        </a>
      </div>

      <header class="max-w-4xl mb-16">
        <h1
          class="text-4xl md:text-6xl font-medium tracking-tight text-gray-900 mb-6 leading-[1.1]"
          transition:name={`post-title-${post.slug}`}
        >
          {post.data.title}
        </h1>

        <div class="flex items-center gap-6 text-gray-500 text-sm">
          <time
            datetime={post.data.publishedAt}
            class="font-medium"
            transition:name={`post-date-${post.slug}`}
          >
            {formattedDate}
          </time>
          {post.data.labels && post.data.labels.length > 0 && (
            <div class="flex gap-2">
              {post.data.labels.map(label => (
                 <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded-md text-xs uppercase tracking-wide font-medium">
                   {label}
                 </span>
              ))}
            </div>
          )}
        </div>
      </header>

      {post.data.image && (
        <div class="w-full mb-16 rounded-xl overflow-hidden border border-gray-100">
          {typeof post.data.image === 'object' && post.data.image !== null ? (
            <Image
              src={post.data.image}
              alt={post.data.title}
              class="w-full h-auto object-cover"
              format="webp"
              quality={85}
              sizes="(min-width: 1024px) 1024px, 100vw"
              layout="full-width"
              fetchpriority="high"
            />
          ) : (
            <img
              src={post.data.image as string}
              alt={post.data.title}
              class="w-full h-auto object-cover"
              loading="eager"
              fetchpriority="high"
            />
          )}
        </div>
      )}

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
        <!-- Main Content -->
        <main class="lg:col-span-8">
          <article class="prose prose-lg prose-neutral max-w-none">
            <Content
              components={{
                Image: CustomImage,
                VideoPlayer,
                ImageWithCaption,
                List
              }}
            />
          </article>
        </main>

        <!-- Table of Contents -->
        <aside id="toc-sidebar" class="hidden lg:block lg:col-span-4 opacity-0 transition-opacity duration-500">
          <div class="sticky top-32">
            <div class="text-sm font-medium text-gray-900 mb-4 uppercase tracking-wider">
              On this page
            </div>
            <TableOfContents headings={tocHeadings} />
          </div>
        </aside>
      </div>
    </Container>
  </section>
</Layout>

<script>
  /** @type {any} */
  let intersectionObserver = null;

  function cleanupObserver() {
    if (intersectionObserver) {
      intersectionObserver.disconnect();
      intersectionObserver = null;
    }
  }

  function initTableOfContents() {
    cleanupObserver();
    
    const tocSidebar = document.getElementById('toc-sidebar');
    const article = document.querySelector('article');

    if (tocSidebar && article) {
      const headings = article.querySelectorAll('h2, h3');
      if (headings.length > 0) {
        intersectionObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              tocSidebar.classList.remove('opacity-0');
              tocSidebar.classList.add('opacity-100');
            } else if (entry.boundingClientRect.top > 0) {
              tocSidebar.classList.remove('opacity-100');
              tocSidebar.classList.add('opacity-0');
            }
          });
        }, { threshold: 0.1, rootMargin: "-100px 0px 0px 0px" });

        intersectionObserver.observe(article);
      }
    }
  }

  function initTOC() {
    // Delay initialization to ensure DOM is ready
    setTimeout(initTableOfContents, 50);
  }

  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTOC);
  } else {
    initTOC();
  }

  // Handle client-side navigation
  document.addEventListener('astro:page-load', initTOC);
</script>
